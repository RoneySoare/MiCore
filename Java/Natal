package Natal;
public class Natal {
    public String Comida = "Peru assado";
    public String Roupa = "Roupa vermelha";
    public String Musica = "Jingle Bells";
    public String Saldo = "1.500,00";
    public String Mensagem = "Boas Festas!";

    public Natal() {

    }

    public void Casa() {
        System.out.println("A ceia está pronta: " + Comida);
        System.out.println("A Música está tocando: " + Musica);
    }

    public void Pessoa() {
        System.out.println("Estou vestido: " + Roupa);
        System.out.println("Saldo: R$" + Saldo);
    }

    public void Mensagem() {
        System.out.println("Feliz Natal: " + Mensagem);
    }
}

package Natal;
public class Main {
    public static void main(String[] args) {
        Natal natal = new Natal();

        natal.Casa();
        natal.Pessoa();
        natal.Mensagem();
    }
}
